<main class="container">



<a href="/overzicht" class="progress-link">Back to menu</a>

<body>

	<article class="layout">

		<!-- LINKS KOLOM -->
		<section class="side">

			<!-- FOTO -->
			<img src="style/8bitpfp.jpg" alt="Profielfoto Bronx">

			<!-- BIO -->
			<div class="bio">

				<p>
					Lvl: 19
					<br>
					Hp: 100/100
