						<li>
							<label>{{ person.custom.eigenschap2 }}</label>
							<progress value="70" max="100"></progress>
						</li>

						<li>
							<label>{{ person.custom.eigenschap3 }}</label>
							<progress value="60" max="100"></progress>
						</li>

                        <li>
							<label>{{ person.custom.eigenschap4 }}</label>
							<progress value="50" max="100"></progress>
						</li>

					</ul>
				</section>

			</section>
		</section>
    </article>
	



</main>